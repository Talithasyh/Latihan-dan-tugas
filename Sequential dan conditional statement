#include <iostream>

using namespace std;

int main() 
{
    char nama[25];
    int u;
    
    cout << "masukan nama anda : ";
    cin >> nama;
    cout << "masukan umur anda : ";
    cin >> u;
    
    cout << " nama calon mahasiswa : " << nama << '\n';
    cout << " usia : " << u << " tahun" << '\n';

    if (u>=17)
    {
        cout << " Selamat, anda dinyatakan lulus sebagai mahasiswa di Universitas Paramadina" << endl;
    }
    else
    {
        cout << " Maaf, anda dinyatakan tidak lulus sebagai mahasiswa di Universitas Paramadina " << '\n';
        cout << " TETAP SEMANGAT DAN JANGAN PUTUS ASA " << endl;
    }
    
    return 0;
}
